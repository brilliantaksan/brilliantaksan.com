NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
NEXT_PUBLIC_SUPABASE_MEDIA_BUCKET=media

# Optional (recommended for production): if set, admin saves write to GitHub content/site.json
GITHUB_CONTENT_TOKEN=
GITHUB_REPO=brilliantaksan/brilliantaksan.com
GITHUB_BRANCH=main

# Comma-separated admin emails allowed to access /admin
ADMIN_EMAILS=you@example.com

# Long random secret for signing admin session cookies
ADMIN_SESSION_SECRET=

# GitHub OAuth app credentials used by Decap CMS GitHub backend
GITHUB_OAUTH_CLIENT_ID=
GITHUB_OAUTH_CLIENT_SECRET=

# Allowed origins for Decap OAuth handoff (comma-separated)
CMS_OAUTH_ORIGIN=http://localhost:3000,https://brilliantaksan.com
